<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListItemTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ListItemDetail">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/listItemDetail</item>
    </style>

    <style name="SetupEmailListItemStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/setupEmailItemPrimaryColor</item>
        <item name="android:background">@drawable/setup_email_list_item_clickable_background</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SetupEmailListItemStyle.TextView">
        <item name="android:drawableLeft">@drawable/ic_account_circle_setup_color_36dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

</resources>
